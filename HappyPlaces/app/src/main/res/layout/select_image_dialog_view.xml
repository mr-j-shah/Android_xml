<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#c4c4c4"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Select one from below"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_option_from_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:padding="5dp"
        android:text="Select from File" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:dividerColor="@color/app_bar_dark"
        app:dividerThickness="2dp" />

    <TextView
        android:id="@+id/dialog_option_capture_from_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:padding="10dp"
        android:text="Capture Photo from Camera" />

</LinearLayout>